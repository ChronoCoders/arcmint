{
  "uid": "arcmint-lightning",
  "title": "ArcMint Lightning",
  "schemaVersion": 39,
  "version": 1,
  "tags": ["arcmint", "lightning"],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Channel local balance msat",
      "targets": [
        {
          "expr": "channel_balance_local_msat",
          "legendFormat": "local"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Channel remote balance msat",
      "targets": [
        {
          "expr": "channel_balance_remote_msat",
          "legendFormat": "remote"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "LN payment latency (p50/p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(lightning_payment_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(lightning_payment_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Invoice settlement failures",
      "targets": [
        {
          "expr": "rate(invoice_settlement_failures_total[5m])",
          "legendFormat": "failures/sec"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Mint-in total by status",
      "targets": [
        {
          "expr": "sum(rate(mint_in_total[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Mint-out total by status",
      "targets": [
        {
          "expr": "sum(rate(mint_out_total[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
    }
  ]
}

